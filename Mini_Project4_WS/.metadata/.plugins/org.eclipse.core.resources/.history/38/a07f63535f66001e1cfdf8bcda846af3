#include "HAL/LCD/lcd.h"
#include "HAL/HC-SR04/hr_sr04.h"
#include "LIB/std_types.h"
#include <avr/io.h>

int main (void){

	uint8 distance = 0;
	SREG |= (1<<7);

	LCD_init();
	Ultrasonic_init();

	while(1){
		distance = Ultrasonic_readDistance();
		LCD_intgerToString(distance);
		LCD_clearScreen();
	}
	return 0;
}
